pkgname=linux-headers-vendor-rk35xx
deburl="https://apt.armbian.com/pool/main/l/linux-headers-vendor-rk35xx/linux-headers-vendor-rk35xx_25.8.2_arm64__6.1.115-Sbd03-Deeea-P09c0-C3b8bH7b8f-HK01ba-Vc222-B14f4-R448a.deb"
_pkgver="$(echo "$deburl" | grep -Po '[^/]+.deb$' | cut -f 2 -d'_')"
pkgver="${_pkgver/-/_}"
_kver="$(echo "$deburl" | grep -Po '(?<=__)[^/]+\.deb$' | grep -Po '[\d\.]+(-rc\d+)?' | head -n1)"
_kverl="${_kver}${pkgname#linux-headers}"
pkgrel=1
pkgdesc="Armbian Linux vendor headers $_kverl"
arch=('aarch64')
url="https://www.armbian.com/"
license=('GPL2' 'custom')
depends=('python')
install=${pkgname}.install
source=("$pkgname-$pkgver.deb::$deburl")
sha256sums=('e7f034a723d8276294bc19679f66a880477d94b4e157c14221c67ea8afa2f520')
options=('!debug' '!strip')

package() {
  cd "$pkgdir"
  tar xvpf "$srcdir"/data.tar.*
  
  mv lib usr/
}
